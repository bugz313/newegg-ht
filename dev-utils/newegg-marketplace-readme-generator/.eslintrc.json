{
  "extends": "airbnb-base",
  "rules": {
    "camelcase": 2,
    "max-len": 0,
    "new-cap": 0,
    "strict": 0,
    "global-require": 0,
    "no-unused-vars": 1,
    "no-param-reassign": 0,
    "no-mixed-operators": 1,
    "newline-per-chained-call": 0,
    "eol-last": 0,
    "no-underscore-dangle": 0,
    "arrow-parens": 0,
    "no-console": 0,
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ],
    "no-shadow": [
      2,
      {
        "allow": ["err"]
      }
    ]
  }
}
